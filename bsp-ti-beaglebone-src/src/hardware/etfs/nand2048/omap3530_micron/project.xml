<?xml version="1.0"?>
<module name="fs-etfs-omap3530_micron">
  <classification>Driver</classification>
  <description>
    <short>ETFS driver for Micron NAND flash device OMAP3530</short>
    <abstract><![CDATA[
			The fs-etfs-omap3530_micron driver is a Micron NAND flash driver to support the ETFS file system for QNX Neutrino on the OMAP3530 board.
		]]></abstract>
  </description>
  <supports>
    <!-- as this is a board specific variant, we will just list the
			variant that is available ...  -->
    <availability>
      <cpu isa="arm">
        <byteOrder>le</byteOrder>
      </cpu>
      <cpu isa="arm">
        <byteOrder>le.v7</byteOrder>
      </cpu>
    </availability>
  </supports>
  <contents>
    <component id="omap3530" generated="true">
      <location basedir="arm/le">fs-etfs-omap3530_micron</location>
    </component>
  </contents>
  <requires>
    <!-- libetfs && etfs.h should be part of the standard install -->
  </requires>
</module>
